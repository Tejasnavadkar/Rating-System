generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

// Prisma Client must be generated in node_modules/@prisma/client for the import to work.
// Remove any custom output directory from your schema.prisma. reomove this line // output   = "../src/generated/prisma"

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER 
  ADMIN
  OWNER
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique 
  password String 
  address String @db.VarChar(400)
  role Role @default(USER)
  stores Store[]
  ratings Rating[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique
  address String @db.VarChar(400)
  ratings Rating[]
  overAllRating Int @default(0)
  ownerId Int
  owner User @relation(fields: [ownerId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rating {
  id Int @id @default(autoincrement())
  userId Int
  storeId Int
  value Int // 1 to 5
  user User @relation(fields: [userId],references: [id])
  store Store @relation(fields: [storeId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([userId, storeId]) // user can rate a store only once
}
